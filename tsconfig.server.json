{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "ES2020"
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client/**/*",
    "dist",
    "**/*.test.ts"
  ]
}